#!/bin/sh

create="@CREATEDB@"

if [ -z "$create" -o "$create" = no ] ; then
    echo ERROR: no idea how to create a database
    exit 1
fi
if [ -z "$PGDATABASE" ] ; then echo PGDATABASE not set. ; exit 1 ; fi

if [ x"$DEBUG" = x ] ; then
    $create $PGDATABASE >/dev/null 2>&1
else
    echo $create $PGDATABASE
    $create $PGDATABASE
fi
rv=$?

test $rv = 0 || echo ERROR: $create failed. Giving up. 1>&2

exit $rv

# create.sh ends here
